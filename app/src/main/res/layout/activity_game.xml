<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/balls_back"
    android:backgroundTint="#14BB913C"
    android:backgroundTintMode="screen"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/txtCurrentRule"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:text="Game Title"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="64dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="#D8FFFFFF"
            android:gravity="center"
            android:text="Credit"
            android:textColor="#140349"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#D8FFFFFF"
            android:gravity="center"
            android:text="0"
            android:textColor="#140349"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#D8FFFFFF"
            android:gravity="center"
            android:text="Attempts"
            android:textColor="#140349"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/txtChanses"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#D8FFFFFF"
            android:gravity="center"
            android:text="0"
            android:textColor="#140349"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="64dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtResponse"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginBottom="10dp"
            android:background="#D8FFFFFF"
            android:gravity="center"
            android:textColor="#DA0B0B"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="64dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtNumber"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:width="20dp"
                android:background="@android:color/white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="#F51E5BD3"
                android:text="send" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>